{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "strict": true,
    "rootDir": ".",
    "paths": {
      "ponder:*": ["./.ponder/types/*"],
      "@/generated": ["./generated/index.ts"]
    }
  },
  "include": ["./**/*.ts"],
  "exclude": ["node_modules"]
}

